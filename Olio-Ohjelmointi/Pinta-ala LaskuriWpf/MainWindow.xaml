<Window x:Class="IkkunaLaskuri.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IkkunaLaskuri" Height="350" Width="525" Background="SandyBrown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Ikkunan Leveys (L):"/>
            <TextBox x:Name="LeveysTextBox" Background="DeepSkyBlue"/>

            <TextBlock Text="Ikkunan Korkeus (H):"/>
            <TextBox x:Name="KorkeusTextBox" Background="DeepSkyBlue"/>

            <TextBlock Text="Karmipuun Leveys (W):"/>
            <TextBox x:Name="KarmiTextBox" Background="DeepSkyBlue"/>

            <Button Content="Laske" Click="LaskeButtonClick" Margin="0,10,0,0" Background="DeepSkyBlue"/>
        </StackPanel>

        <Canvas x:Name="IkkunaCanvas" Grid.Column="1" Margin="10" Width="1250" Height="750" Background="SaddleBrown"/>
    </Grid>
</Window>