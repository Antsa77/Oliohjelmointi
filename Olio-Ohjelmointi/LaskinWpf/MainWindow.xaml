<Window x:Class="WpfLaskin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Laskin" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Luku 1:"/>
            <TextBox x:Name="Luku1TextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Luku 2:"/>
            <TextBox x:Name="Luku2TextBox" Margin="0,0,0,10"/>

            <Button Content="Summa" Click="SummaButtonClick"/>
            <Button Content="Erotus" Click="ErotusButtonClick"/>
            <Button Content="Kertolasku" Click="KertolaskuButtonClick"/>
            <Button Content="Jakolasku" Click="JakolaskuButtonClick"/>

            <TextBlock x:Name="TulosTextBlock" FontWeight="Bold" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
