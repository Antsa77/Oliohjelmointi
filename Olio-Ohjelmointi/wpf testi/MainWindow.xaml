<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Calculator" Height="350" Width="525">
    <Grid Background="#FF3A3A3A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Name="Input1" Grid.Row="0" Width="120"/>
        <TextBox Name="Input2" Grid.Row="1" Width="120"/>
        <Button Name="AddButton" Content="+" Grid.Row="2" Width="50" Click="AddButton_Click"/>
        <Button Name="SubtractButton" Content="-" Grid.Row="2" Width="50" Click="SubtractButton_Click"/>
        <Button Name="MultiplyButton" Content="*" Grid.Row="3" Width="50" Click="MultiplyButton_Click"/>
        <Button Name="DivideButton" Content="/" Grid.Row="3" Width="50" Click="DivideButton_Click"/>
        <TextBlock Name="ResultText" Grid.Row="4" Width="120" Background="White"/>
    </Grid>
</Window>
