<Window x:Class="lotto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lotto Sovellus" Height="350" Width="500" Background="Orange">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <Label Content="Rivien määrä" VerticalAlignment="Top"/>
            <TextBox x:Name="rivienMaaraTextBox" Width="120" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Valitse peli" VerticalAlignment="Top"/>
            <ComboBox x:Name="pelivalinta" Width="120" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Tulosta" Click="TulostaButton_Click" Margin="0,0,10,0"/>
            <Button Content="Tyhjennä" Click="TyhjennaButton_Click" Margin="0,0,10,0"/>
        </StackPanel>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
            <TextBlock x:Name="arvotutRivitTextBox"/>
        </ScrollViewer>
    </StackPanel>
</Window>
