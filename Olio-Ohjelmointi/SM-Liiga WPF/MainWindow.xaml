<Window x:Class="JoukkueSovellus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="JoukkueSovellus" Height="350" Width="525" Background="LightGray">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="JoukkueetDataGrid" AutoGenerateColumns="True" Margin="10"/>
            <DataGrid x:Name="PelaajatDataGrid" AutoGenerateColumns="True" Margin="10"/>
            <Button Content="Tallenna JSON" Click="TallennaJsonButtonClick" Margin="10"/>
            <Button Content="Tallenna XML" Click="TallennaXmlButtonClick" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>